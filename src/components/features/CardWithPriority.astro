---
interface Props {
  component: any;
  index?: number;
  priority?: boolean;
  props: Record<string, any>;
}

const { component, index, priority, props } = Astro.props as Props;
const Component = component;
const effectivePriority = typeof priority === 'boolean' ? priority : index === 0;
---

<Component {...props} priority={effectivePriority} />
